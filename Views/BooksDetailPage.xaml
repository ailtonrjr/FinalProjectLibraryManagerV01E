<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProjectLibraryManagerV01E.Views.BookDetailPage">
    <StackLayout Padding="20">
        <Label Text="Book Details" FontSize="20" HorizontalOptions="Center" Margin="0,0,0,20"/>

        <!-- Book Title -->
        <Label Text="Title:" FontSize="18" />
        <Label Text="{Binding Title}" FontSize="16" Margin="0,0,0,10"/>

        <!-- Book author -->
        <Label Text="Author:" FontSize="18" />
        <Label Text="{Binding Author}" FontSize="16" Margin="0,0,0,10"/>

        <!-- Book ISBN  -->
        <Label Text="ISBN:" FontSize="18" />
        <Label Text="{Binding ISBN}" FontSize="16" Margin="0,0,0,10"/>


        <!-- Button to perform loan operations -->
        <Button Text="Loan" Clicked="OnLoanClicked" HorizontalOptions="FillAndExpand" Margin="0,20,0,0"/>
    </StackLayout>
</ContentPage>
